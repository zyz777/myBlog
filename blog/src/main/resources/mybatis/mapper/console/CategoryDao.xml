<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sbsm.blog.dao.console.CategoryDao">


    <insert id="insert" parameterType="com.sbsm.blog.entity.console.Category">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO `category`( `create_time`, `update_time`, `remark`, `del_flag`, `cid`, `name`, `descn`, `sort`,
        `p_cid`) VALUES (#{createTime}, #{updateTime}, #{remark}, #{delFlag}, #{cid}, #{name}, #{descn}, #{sort},
        #{pCid})
    </insert>

    <update id="update">
        UPDATE `category`
        SET
        `update_time` = #{updateTime},
        `remark` = #{remark},
        `name` = #{name},
        `descn` = #{descn},
        `sort` = #{sort},
        `p_cid` = #{pCid}
        WHERE
            `id` = #{id};
    </update>

    <update id="delete">
        UPDATE `category` SET `update_time` = now(), `del_flag`=1 WHERE `id` = #{arg0}
    </update>

    <select id="findPage" resultType="com.sbsm.blog.entity.console.Category">
        select *,`create_time` createTime, `update_time` updateTime, `p_cid` pCid  from `category` where `del_flag`=0
        order by `sort` asc, `update_time` desc
        limit #{arg0}, #{arg1}
    </select>

    <select id="countByDelFlag" resultType="Integer">
        select count(*) from `category` where `del_flag`=#{arg0}
    </select>


</mapper>