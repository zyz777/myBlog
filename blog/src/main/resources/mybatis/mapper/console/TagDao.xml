<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sbsm.blog.dao.console.TagDao">


    <insert id="insert" parameterType="com.sbsm.blog.entity.console.Tag">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO `tag` ( `create_time`, `update_time`, `remark`, `del_flag`, `tid`, `name`, `descn` )
        VALUES
                          (#{createTime}, #{updateTime}, #{remark}, #{delFlag}, #{tid}, #{name}, #{descn} )
    </insert>

    <update id="update">
        UPDATE `tag`
        SET
        `update_time` = #{updateTime},
        `remark` = #{remark},
        `name` = #{name},
        `descn` = #{descn}
        WHERE
            `id` = #{id};
    </update>

    <update id="delete">
        UPDATE `tag` SET `update_time` = now(), `del_flag`=1 WHERE `id` = #{arg0}
    </update>

    <select id="findAll" resultType="com.sbsm.blog.entity.console.Tag">
        select *,`create_time` createTime, `update_time` updateTime  from `tag` where `del_flag`=#{delFlag}
        order by `update_time` desc
    </select>

    <select id="findPage" resultType="com.sbsm.blog.entity.console.Tag">
        select *,`create_time` createTime, `update_time` updateTime  from `tag` where `del_flag`=0
        order by `update_time` desc
        limit #{arg0}, #{arg1}
    </select>

    <select id="countByDelFlag" resultType="Integer">
        select count(*) from `tag` where `del_flag`=#{arg0}
    </select>

    <select id="findTagByArId" resultType="com.sbsm.blog.entity.console.Tag">
        SELECT
            t.*, t.`create_time` createTime, t.`update_time` updateTime
        FROM
            `article_tag_mapping` atm
            LEFT JOIN `tag` t ON t.`tid` = atm.`tid`
        WHERE
            atm.`ar_id` =#{arg0}
    </select>


</mapper>